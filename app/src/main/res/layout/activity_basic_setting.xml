<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BasicSettingActivity">

    <ImageView
        android:id="@+id/toolbar_basicsetting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/toolbar_basicsetting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-50dp"/>

    <Button
        android:id="@+id/btn_basicSettingNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/toolbar_basicsetting"
        app:layout_constraintBottom_toBottomOf="@id/toolbar_basicsetting"/>

    <ImageView
        android:id="@+id/iv_basicSettingPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_basicsettingphoto"
        app:layout_constraintTop_toBottomOf="@id/toolbar_basicsetting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_textnnickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="@id/iv_basicSettingNickname"
        app:layout_constraintTop_toBottomOf="@id/iv_basicSettingPhoto"
        android:layout_marginTop="19dp"
        />


    <EditText
        android:id="@+id/iv_basicSettingNickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/img_basicsettingnickname"
        app:layout_constraintTop_toBottomOf="@id/tv_textnnickname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>