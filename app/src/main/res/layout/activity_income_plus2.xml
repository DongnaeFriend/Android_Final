<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IncomePlus2Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_incomeplustopbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="41dp">

        <ImageView
            android:id="@+id/imageview_incomegoback2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/button_goback"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_moneyamount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4,500"
                android:textSize="21dp"
                android:textStyle="bold"
                android:textColor="#4600a3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textSize="21dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageview_incomeclose2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:src="@drawable/btn_incomeclose"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/edittext_incomeplusmemo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="메모"
        android:paddingStart="10dp"
        android:textSize="15dp"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/const_incomeplustopbar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="25dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_incomecategory1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_incomeplusmemo">

        <ImageView
            android:id="@+id/imageview_accountcategory_salery"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_category_salery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월급"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@id/imageview_accountcategory_salery"
            app:layout_constraintStart_toStartOf="@id/imageview_accountcategory_salery"
            app:layout_constraintTop_toBottomOf="@id/imageview_accountcategory_salery" />

        <ImageView
            android:id="@+id/imageview_accountcategory_allowance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:src="@drawable/img_category_allowance"
            app:layout_constraintStart_toEndOf="@id/imageview_accountcategory_salery"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="용돈"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@id/imageview_accountcategory_allowance"
            app:layout_constraintStart_toStartOf="@id/imageview_accountcategory_allowance"
            app:layout_constraintTop_toBottomOf="@id/imageview_accountcategory_allowance" />

        <ImageView
            android:id="@+id/imageview_accountcategory_carryover"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:src="@drawable/img_category_carryover"
            app:layout_constraintStart_toEndOf="@id/imageview_accountcategory_allowance"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이월"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@id/imageview_accountcategory_carryover"
            app:layout_constraintStart_toStartOf="@id/imageview_accountcategory_carryover"
            app:layout_constraintTop_toBottomOf="@id/imageview_accountcategory_carryover" />

        <ImageView
            android:id="@+id/imageview_accountcategory_withdraw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:src="@drawable/img_category_withdraw"
            app:layout_constraintStart_toEndOf="@id/imageview_accountcategory_carryover"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자산인출"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@id/imageview_accountcategory_withdraw"
            app:layout_constraintStart_toStartOf="@id/imageview_accountcategory_withdraw"
            app:layout_constraintTop_toBottomOf="@id/imageview_accountcategory_withdraw" />

        <ImageView
            android:id="@+id/imageview_accountcategory_etc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/img_category_etc"
            android:layout_marginLeft="25dp"
            app:layout_constraintStart_toEndOf="@id/imageview_accountcategory_withdraw"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="@id/imageview_accountcategory_etc"
            app:layout_constraintStart_toStartOf="@id/imageview_accountcategory_etc"
            app:layout_constraintTop_toBottomOf="@id/imageview_accountcategory_etc" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>